package com.vanillagorrrilla.feelgood.controller;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.CrossOrigin;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.vanillagorrrilla.feelgood.model.Account;
import com.vanillagorrrilla.feelgood.service.AccountService;

@RestController
@RequestMapping("/account")
@CrossOrigin
public class AccountController {
	@Autowired
	private AccountService accountService;
	
	@PostMapping("/changeUsername")
	public String changeUsername(@RequestBody Account account)
	{
		accountService.changeUsername(account);
		return "Name Changed";
	}
	
	@PostMapping("/changeName")
	public String changeName(@RequestBody Account account)
	{
		accountService.changeName(account);
		return "Name Changed";
	}
	
	@PostMapping("/changePassword")
	public String changePassword(@RequestBody Account account)
	{
		accountService.changePassword(account);
		return "Password Changed";
	}
	
	@PostMapping("/changeEmail")
	public String changeEmail(@RequestBody Account account)
	{
		accountService.changeEmail(account);
		return "Email Changed";
	}
	
	@GetMapping("/getAll")
	public List<Account> getAllAccounts(){
		return accountService.getAllAccounts();
	}
}
