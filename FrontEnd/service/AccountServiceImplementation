package com.vanillagorrrilla.feelgood.service;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.vanillagorrrilla.feelgood.model.Account;
import com.vanillagorrrilla.feelgood.repository.AccountRepository;

@Service
public class AccountServiceImplementation implements AccountService{

	@Autowired
	private AccountRepository accountRepository;
	
	@Override
	public Account saveAccount(Account account) {
		return accountRepository.save(account);
	}

	@Override
	public List<Account> getAllAccounts() {
		return accountRepository.findAll();
	}
	
	public void changeUsername(Account account) {
		try {
			Account accountDb = accountRepository.getById(account.getId());
			accountDb.setUsername(account.getUsername());
			accountRepository.save(accountDb);
		}
		catch(Exception e)
		{
			//
		}
	}
	public void changeName(Account account) {
		try {
			Account accountDb = accountRepository.getById(account.getId());
			accountDb.setName(account.getName());
			accountRepository.save(accountDb);
		}
		catch(Exception e)
		{
			//
		}
	}
	public void changePassword(Account account) {
		try {
			Account accountDb = accountRepository.getById(account.getId());
			accountDb.setPassword(account.getPassword());
			accountRepository.save(accountDb);
		}
		catch(Exception e)
		{
			//
		}
	}
	public void changeEmail(Account account) {
		try {
			Account accountDb = accountRepository.getById(account.getId());
			accountDb.setEmail(account.getEmail());
			accountRepository.save(accountDb);
		}
		catch(Exception e)
		{
			//
		}
	}

}
